<!--  Core Bootstrap Script -->
<script src="/js/bootstrap.js"></script>
<script src="/js/underscore.js"></script>
<script>
    getGoods("其他",0);
    $("#goodType").change(function(){
        var index=$(this).val();
      getGoods(index,0);
    })

    function getGoods(index,page) {
        $.get("/admin/getGoods?type="+index+"&pageNum="+page,function (result) {
            var compiled = _.template($("#muban").html());
            for (var i = 0; i < result.result.length; i++) {
                var html = compiled({
                    "goodId": result.result[i]._id,
                    "goodName":result.result[i].productName,
                    "goodPic":result.result[i].productImg,
                    "goodPrice":result.result[i].salePrice,
                    "goodTime":new Date().toLocaleString(),

                });
                $("#listTr").append($(html));
            }
            $(".pagination").html("");
            var compiled1 = _.template($("#fenye").html());
            var page=Math.ceil(result.result.length/10);
            for(var i=0;i<page;i++){
                var html1 = compiled1({
                   "pageNum":i
                });
                $(".pagination").append($(html1));
            }




        })
        $("#listTr").html("");
    }
</script>
