            {{ for(var i=0;i<goodPic.length;i++){ }}
            <img id="smallqrcode" class="img-thumbnail" src="/{{= goodPic[i] }}" style="width:30px;height:30px;margin-top:8px;cursor: pointer"/>
            {{ } }}
