<script>
	getGoods();
	function getGoods() {
		$.get("/getGoods",function (result) {
       console.log(result);
            var compiled = _.template($("#muban").html());
            for (var i = 0; i < result.result.length; i++) {
                var html = compiled({
                    "goodName": result.result[i].productName,
                    "goodPrice":result.result[i].salePrice,
                    "goodPic":result.result[i].productImg[0],
                });
                $("#top-box").append($(html));
			}
        })
    }
</script>